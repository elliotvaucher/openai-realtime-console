{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client"
      }
    }
  ],
  "routes": [
    { "src": "/token", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/dist/client/$1" }
  ]
} 